@using LightpointTestTask.WEB.Models
@model ProductModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
}
<h3>@Model.Name</h3>
<p>@Model.Description</p>
<div>
    <form asp-controller="Shops" asp-action="DeleteProduct" asp-route-productId="@Model.ProductId" asp-route-shopId="@Model.ShopId" method="post">
        <div class="form-group">
            <input type="submit" class="btn btn-light" value="Удалить" />
        </div>
    </form>
</div>